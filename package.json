{
  "name": "goldsphere-server",
  "version": "1.0.0",
  "description": "The server including the business logic and integration for the goldsphere project",
  "main": "src/app.ts",
  "scripts": {
    "test": "jest tests/unit tests/contracts --testPathIgnorePatterns='tests/integration'",
    "test:unit": "jest tests/unit --testPathIgnorePatterns='tests/integration'",
    "test:integration": "jest tests/integration --testTimeout=60000 --runInBand",
    "test:integration:cleanup": "node scripts/cleanup-test-databases.js",
    "test:contracts": "jest tests/contracts",
    "test:all": "jest",
    "test:watch": "jest --watch tests/unit tests/contracts --testPathIgnorePatterns='tests/integration'",
    "test:coverage": "jest --coverage tests/unit tests/contracts --testPathIgnorePatterns='tests/integration'",
    "test:ci": "jest --ci --coverage --watchAll=false tests/unit tests/contracts --testPathIgnorePatterns='tests/integration'",
    "test:orders": "jest tests/unit/orders.unit.test.ts",
    "test:payment-integration": "jest tests/integration/payment.integration.test.ts --testTimeout=60000",
    "test:orders-integration": "jest tests/integration/orders.integration.test.ts --testTimeout=30000",
    "test:payment-quick": "node scripts/test-payment-api.js",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "dev:test": "NODE_ENV=test node -r dotenv/config dist/index.js dotenv_config_path=.env.test",
    "dev:prod": "NODE_ENV=production node -r dotenv/config dist/index.js dotenv_config_path=.env.prod",
    "build": "tsc && cp -r src/queries dist/",
    "build:watch": "tsc --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prestart": "npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "echo 'Add your migration command here'",
    "docs:serve": "npm run dev",
    "install:dev": "dotenv -e .env.dev -- npm install",
    "install:test": "dotenv -e .env.test -- npm install",
    "install:prod": "dotenv -e .env.prod -- npm install",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcopersi/goldsphere-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcopersi/goldsphere-server/issues"
  },
  "homepage": "https://github.com/marcopersi/goldsphere-server#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.10",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.0.11",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@marcopersi/shared": "^1.4.4",
    "@types/bcrypt": "^6.0.0",
    "@types/stripe": "^8.0.416",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.13.1",
    "stripe": "^18.4.0",
    "swagger-jsdoc": "^6.2.8",
    "uuid": "^11.1.0",
    "zod": "^4.0.15"
  }
}
