# Environment Configuration for GoldSphere Server

# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=goldsphere
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# CORS Configuration
# Frontend URLs (comma-separated for multiple domains)
CORS_ORIGINS=http://localhost:3333,http://localhost:3000,https://app.goldsphere.vault

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Documentation
API_DOCS_ENABLED=true

# Logging
LOG_LEVEL=debug

# File Upload (if needed)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@goldsphere.vault
SMTP_PASSWORD=your_email_password

# External APIs
GOLD_PRICE_API_KEY=your_gold_price_api_key
