# =============================================================================
# Goldsphere Server - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# =============================================================================

# --- Application ---
NODE_ENV=production
PORT=11215

# --- App Version (for docker-compose.prod.yml) ---
# Use 'latest' or a specific semantic version (e.g., 1.2.3)
APP_VERSION=latest

# --- Database ---
DB_USER=goldsphere
DB_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
DB_NAME=goldsphere
DB_PORT=5432
DB_POOL_MAX=20
DB_POOL_MIN=5

# --- Authentication ---
# REQUIRED: Generate a strong random secret, e.g.: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_SECRET

# --- External Connectors ---
# REQUIRED: 32-byte base64 key for encrypting connector credentials
# Example: openssl rand -base64 32
CONNECTOR_CREDENTIAL_KEY=

# --- Email / SMTP (optional) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@goldsphere.vault

# --- Stripe Payment (optional) ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- pgAdmin (only for docker-compose.yml, not prod) ---
PGADMIN_EMAIL=admin@goldsphere.local
PGADMIN_PASSWORD=CHANGE_ME
PGADMIN_PORT=8880

# --- GitHub Packages Auth (only needed for local docker build) ---
NODE_AUTH_TOKEN=
