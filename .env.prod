# Environment Configuration for GoldSphere Server - Production
NODE_ENV=production
PORT=8080

# Database Configuration (PostgreSQL)
DB_HOST=goldsphere-db-prod
DB_PORT=5432
DB_NAME=goldsphere_prod
DB_USER=goldsphere_user
DB_PASSWORD=your_secure_production_password

# JWT Configuration
JWT_SECRET=production-super-secret-jwt-key-must-be-secure-and-at-least-32-characters-long
JWT_EXPIRES_IN=8h

# CORS Configuration
# Frontend URLs (comma-separated for multiple domains)
CORS_ORIGINS=https://app.goldsphere.vault,https://goldsphere.vault

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Documentation
API_DOCS_ENABLED=false

# Logging
LOG_LEVEL=error

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.goldsphere.vault
SMTP_PORT=587
SMTP_USER=noreply@goldsphere.vault
SMTP_PASSWORD=your_production_email_password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here

# Payment API Configuration
PAYMENT_API_BASE_URL=https://api.goldsphere.vault/api/v1
PAYMENT_ENVIRONMENT=production
PAYMENT_DEBUG=false